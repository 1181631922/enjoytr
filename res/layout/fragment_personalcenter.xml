<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/upmost"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:background="#cc6633"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                android:text="@string/fragment_personalcenter_title"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/upmost"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/group_01"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:background="#03A89E"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/user_but"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/user_img"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/user_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击头像登录"
                    android:textColor="#0000FF"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="5dp" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1sp"
                    android:background="#808069" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/our_money"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:src="@drawable/fenleixinxi" />

                    <Button
                        android:id="@+id/per_information"
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/our_money"
                        android:background="#FAFFF0"
                        android:gravity="center_vertical"
                        android:text="分类信息"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1sp"
                    android:background="#808069" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/our_project"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:src="@drawable/wodeshoucang" />

                    <Button
                        android:id="@+id/per_collect"
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/our_money"
                        android:gravity="center_vertical"
                        android:background="#FAFFF0"
                        android:text="我的收藏"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1sp"
                    android:background="#808069" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/our_history"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:src="@drawable/lianxifangshi" />

                    <Button
                        android:id="@+id/per_relation"
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/our_money"
                        android:background="#FAFFF0"
                        android:gravity="center_vertical"
                        
                        android:text="联系方式"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1sp"
                    android:layout_marginLeft="0dp"
                    android:background="#808069" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/our_setting"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:src="@drawable/shimingrenzheng" />

                    <Button
                        android:id="@+id/per_certification"
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/our_money"
                        android:background="#FAFFF0"
                        android:gravity="center_vertical"
                        android:text="实名认证"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1sp"
                    android:layout_marginLeft="0dp"
                    android:background="#808069" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/our_message"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:src="@drawable/duanxiaoxi" />

                    <Button
                        android:id="@+id/per_message"
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/our_message"
                        android:background="#FAFFF0"
                        android:gravity="center_vertical"
                        android:text="短消息"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1sp"
                    android:layout_marginLeft="0dp"
                    android:background="#808069" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/our_up"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:src="@drawable/shengji" />

                    <Button
                        android:id="@+id/per_upgrade"
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/our_message"
                        android:background="#FAFFF0"
                        android:gravity="center_vertical"
                        android:text="升级"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1sp"
                    android:layout_marginLeft="0dp"
                    android:background="#808069" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/our_charge"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:src="@drawable/chongzhi" />

                    <Button
                        android:id="@+id/per_charge"
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/our_message"
                        android:background="#FAFFF0"
                        android:gravity="center_vertical"
                        android:text="充值"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1sp"
                    android:layout_marginLeft="0dp"
                    android:background="#808069" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/our_pass"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:src="@drawable/mima" />

                    <Button
                        android:id="@+id/per_password"
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/our_message"
                        android:background="#FAFFF0"
                        android:gravity="center_vertical"
                        android:text="密码"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1sp"
                android:layout_marginLeft="0dp"
                android:background="#808069" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>